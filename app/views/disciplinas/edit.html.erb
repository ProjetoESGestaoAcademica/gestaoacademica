<h1>Editar - Disciplina</h1>

<%= form_with scope: :disciplina, url: disciplinas_path, local: true do |form| %>
  <% if @disciplina.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@disciplina.errors.count, "error") %> prohibited
        this disciplina from being saved:
      </h2>
      <ul>
        <% @disciplina.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :nome %><br>
    <%= form.text_field :nome %>
  </p>

  <p>
    <%= form.label :ementa %><br>
    <%= form.text_area :ementa %>
  </p>

  <p>
    <%= form.label :horas %><br>
    <%= form.text_field :horas %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', disciplinas_path %>
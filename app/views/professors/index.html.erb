<h1>Professores</h1>

<%= link_to 'Cadastrar professor', new_professor_path %>

<br>
<br>
<br>

<table>
  <tr>
    <th>Nome</th>
    <th>Formação</th>
    <th></th>
  </tr>

 <% @professors.each do |professor| %>
    <tr>
      <td><%= professor.nome %></td>
      <td><%= professor.formacao %></td>
      <td><%= link_to 'Mostrar', professor_path(professor) %></td>
      <td><%= link_to 'Editar', edit_professor_path(professor) %></td>
      <td><%= link_to 'Destruir', professor_path(professor),
                      method: :delete,
                      data: { confirm: 'Você esta seguro disto?' } %></td>
    </tr>
  <% end %>
</table>

